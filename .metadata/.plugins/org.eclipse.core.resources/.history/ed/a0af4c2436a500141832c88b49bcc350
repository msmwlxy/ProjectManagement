package org.future.projectManagement.dao;

import java.util.LinkedHashMap;
import java.util.List;

import javax.annotation.Resource;

import org.future.projectManagement.bean.Student;
import org.future.projectManagement.utils.QueryResult;
import org.hibernate.SessionFactory;

public interface StudentDao{
	
	public abstract SessionFactory getSessionFactory();
	@Resource
	public abstract void setSessionFactory(SessionFactory sessionFactory);
	
	public void add(Student student);
	public Student find(Class<Student> Student,int id);
	public void Update(Student student);
	public void delete(Student student);
	public void delete(List<Student> list);
	
	public  QueryResult<Student> getQueryResult();
	public  QueryResult<Student> getQueryResult(int startIndex,int MaxResults,Object[] parameters,String where,LinkedHashMap<String,String> orderBy);
	public  QueryResult<Student> getQueryResult(int startIndex,int MaxResults,Object[] parameters,String where);
	public  QueryResult<Student> getQueryResult(int startIndex,int MaxResults,LinkedHashMap<String,String> orderBy);
	public  QueryResult<Student> getQueryResult(Object[] parameters,String where,LinkedHashMap<String,String> orderBy);
	public  QueryResult<Student> getQueryResult(int startIndex,int MaxResults);
	public  QueryResult<Student> getQueryResult(Object[] parameters, String where);
	
}