package org.future.projectManagement.dao;

import java.util.LinkedHashMap;
import java.util.List;

import javax.annotation.Resource;

import org.future.projectManagement.bean.Project;
import org.future.projectManagement.utils.QueryResult;
import org.hibernate.SessionFactory;

public interface ProjectDao {
	public abstract SessionFactory getSessionFactory();
	@Resource
	public abstract void setSessionFactory(SessionFactory sessionFactory);
	//添加项目
	public void add(Project project);
	//根据id查找学生
	public Project find(Class<Project> project,int id);
	//更新学生信息
	public void Update(Project project);
	//删除学生
	public void delete(Project project);
	//删除一批学生
	public void delete(List<Project> list);
	
	//查找所有的学生
	public  QueryResult<Project> getQueryResult();
	//根据开始索引，最大记录数和查询条件来得到要查询的学生集合,并且对结果集进行排序
	public  QueryResult<Project> getQueryResult(int startIndex,int MaxResults,Object[] parameters,
			String where,LinkedHashMap<String,String> orderBy);
	//根据开始索引，最大记录数和查询条件得到要查询的学生的集合
	public  QueryResult<Project> getQueryResult(int startIndex,int MaxResults,Object[] parameters,
			String where);
	//根据开始索引和要查询的最大记录数得到要查询的学生集合，并且对结果集进行排序
	public  QueryResult<Project> getQueryResult(int startIndex,int MaxResults,
			LinkedHashMap<String,String> orderBy);
	//根据查询条件得到要查询的结果集，并且对结果集中的学生进行排序
	public  QueryResult<Project> getQueryResult(Object[] parameters,String where,
			LinkedHashMap<String,String> orderBy);
	//根据开始索引和要查询的最大记录数得到要查询的结果
	public  QueryResult<Project> getQueryResult(int startIndex,int MaxResults);
	//根据查询条件得到要查询的结果集
	public  QueryResult<Project> getQueryResult(Object[] parameters, String where);
}
