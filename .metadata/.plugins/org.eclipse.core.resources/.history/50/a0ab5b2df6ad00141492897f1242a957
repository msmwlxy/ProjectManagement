    			<param name="contentType">application/msword</param>
    			<!-- 被下载文件的入口 -->
    			<param name="inputName">targetFile</param>
    			<!--指定下载的文件名  -->
    			<param name="contentDisposition">attachment;filename="${fileName}"</param>
    			<!--指定下载文件时的缓冲大小  -->
    			<param name="bufferSize">4096</param>
    		</result>
    	</action>
