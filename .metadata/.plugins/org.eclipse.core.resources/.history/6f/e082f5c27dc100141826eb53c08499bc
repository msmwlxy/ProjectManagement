<struts>
	<package name="default" namespace="/" extends="struts-default">
	
		<!-- 配置登陆Action，进行测试登陆，注册，退出功能 -->
		<action name="log_*" class="loginAction" method="{1}">
			<!-- <result name="loginUI">/WEB-INF/jsp/loginOutReg/Login_UI.jsp</result> -->			
			<result name="signInUIS">/WEB-INF/jsp/loginOutReg/Student_registration.jsp</result>
			<result name="signInUII">/WEB-INF/jsp/loginOutReg/Teacher_registration.jsp</result>			
			<result type="redirectAction" name="signIn">log_login?identity=${identity}&amp;accountNum=${accountNum}&amp;password=${password}</result>
			<result name="logOut">/WEB-INF/jsp/loginOutReg/LogOut.jsp</result>
			<result name="index">/index.jsp</result>
			<!-- 使用跳转，登陆后进入不同角色功能界面 -->
			<!-- <result name="login">/WEB-INF/jsp/loginOutReg/BackStage.jsp</result> -->
			<result name="login_Student" type="redirectAction">student/index</result> 
			<result name="login_Instructor" type="redirectAction">instructor/index</result> 
			<result name="login_ColAudit" type="redirectAction">colAudit/index</result> 
			<result name="login_TAOAudit" type="redirectAction">tAOAudit/index</result> 
			<result name="login_Admin" type="redirectAction">admin/index</result> 
			
		</action>
		
		<!-- 教务处选择项目进行展示和相应的公告管理 -->
		<action name="tao_*" class="proShowAndPubAnn" method="{1}">
			<!-- 需要在登陆Action进行跳转 -->
			<result name="index">/WEB-INF/jsp/ColAudit/index.jsp</result>
			<result name="listUI">/WEB-INF/jsp/ColAudit/ShowManage.jsp</result>
			<result name="top">/WEB-INF/jsp/ColAudit/top.jsp</result>
			<result name="left">/WEB-INF/jsp/ColAudit/left.jsp</result>
			<result name="right">/WEB-INF/jsp/ColAudit/right.jsp</result>
			<result name="bottom">/WEB-INF/jsp/ColAudit/bottom.jsp</result>
		</action>
		
	</package>

</struts>
